{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppName": {
      "type": "string"
    },
    "serverFarmName": {
      "type": "string"
    },
    "acrLoginServer": {
      "type": "string"
    },
    "dockerImageName": {
      "type": "string"
    },
    "acrUsername": {
      "type": "string"
    },
    "acrPassword": {
      "type": "secureString"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[parameters('serverFarmName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "P1v2",
        "tier": "PremiumV2",
        "capacity": 1
      },
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('serverFarmName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serverFarmName'))]",
        "siteConfig": {
          "appCommandLine": "",
          "linuxFxVersion": "[concat('DOCKER|', parameters('dockerImageName'))]",
          "containerRegistryManagedIdentityClientId": "",
          "acrUseManagedIdentityCreds": false,
          "registryUsername": "[parameters('acrUsername')]",
          "registryPassword": "[parameters('acrPassword')]"
        }
      }
    }
  ]
}
